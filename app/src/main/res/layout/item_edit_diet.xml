<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/list_internal_horizontal_margin"
                android:paddingRight="@dimen/list_internal_horizontal_margin">


    <TextView
        android:id="@+id/item_diet_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_internal_vertical_margin"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/color_black"
        android:textSize="@dimen/text_title"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/item_diet_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_diet_max_value"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/item_diet_to"
        android:layout_alignTop="@+id/item_diet_max_value"
        android:layout_below="@id/item_diet_name"
        android:layout_marginTop="@dimen/list_internal_vertical_margin"
        android:gravity="center"
        android:text="de:"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_large_body"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/item_diet_max_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_diet_name"
        android:layout_marginTop="@dimen/list_internal_vertical_margin"
        android:layout_toLeftOf="@+id/item_diet_max_unit"
        android:layout_toRightOf="@id/item_diet_from"
        android:paddingLeft="@dimen/list_internal_horizontal_margin"
        android:paddingRight="@dimen/list_internal_horizontal_margin"
        android:inputType="number"
        android:textColor="@color/color_black"
        android:textSize="@dimen/text_large_body"
        />

    <TextView
        android:id="@+id/item_diet_max_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_diet_max_value"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/item_diet_max_value"
        android:layout_below="@id/item_diet_name"
        android:layout_marginTop="@dimen/list_internal_vertical_margin"
        android:gravity="center"
        android:text="g"
        android:textColor="@color/color_black"
        android:textSize="@dimen/text_large_body"
        />

    <TextView
        android:id="@+id/item_diet_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_diet_min_value"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/item_diet_min_value"
        android:layout_below="@id/item_diet_from"
        android:layout_marginTop="@dimen/list_internal_vertical_margin"
        android:gravity="center"
        android:text="atÃ©:"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_large_body"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/item_diet_min_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_diet_max_value"
        android:layout_marginTop="@dimen/list_internal_vertical_margin"
        android:layout_toLeftOf="@+id/item_diet_min_unit"
        android:layout_toRightOf="@id/item_diet_to"
        android:layout_weight="1"
        android:paddingLeft="@dimen/list_internal_horizontal_margin"
        android:paddingRight="@dimen/list_internal_horizontal_margin"
        android:inputType="number"
        android:textColor="@color/color_black"
        android:textSize="@dimen/text_large_body"
        />

    <TextView
        android:id="@+id/item_diet_min_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_diet_min_value"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/item_diet_min_value"
        android:layout_below="@id/item_diet_max_unit"
        android:layout_marginTop="@dimen/list_internal_vertical_margin"
        android:gravity="center"
        android:text="g"
        android:textColor="@color/color_black"
        android:textSize="@dimen/text_large_body"
        />

</RelativeLayout>